[root@server programs]# cat two.sh
#!/bin/bash

echo -n "Enter Your Name: "
read n1
for ((i=1;i<=10;i++))
do
echo $i . $n1
done
-----------------------------------

[root@server programs]# cat user.sh
#!/bin/bash

echo -n "Enter name of user to be added : "
read u1
userdel -r  $u1
echo $u1 deleted successfully
--------------------------------
